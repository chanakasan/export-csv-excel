<h1>Products</h1>
<p>
  Download:
  <%= link_to "CSV", products_path(format: "csv") %> |
  <%= link_to "Excel", products_path(format: "xls") %>
</p>
<p>
  References:
</p>
<ul>
  <li>
    <%= link_to 'XML spreadsheet reference', 'http://msdn.microsoft.com/en-us/library/office/aa140066%28v=office.10%29.aspx' %>
  </li>
  <li>
    <%= link_to 'Ruby CSV', 'http://ruby-doc.org/stdlib-1.9.3/libdoc/csv/rdoc/CSV.html' %>
  </li>
</ul>
<br/>
<table id="products">
  <tr>
    <th>Product Name</th>
    <th>Release Date</th>
    <th>Price</th>
  </tr>
<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.released_on.strftime("%B %e, %Y") %></td>
    <td><%= number_to_currency(product.price) %></td>
  </tr>
<% end %>
</table>
